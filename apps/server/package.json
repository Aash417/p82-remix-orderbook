    "start": "pm2 start dist/index.js --name todox-server"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "graphql": "^16.11.0",
    "inversify": "^7.8.1",
    "pm2": "^6.0.8",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "tsdown": "^0.12.9",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  }
}
